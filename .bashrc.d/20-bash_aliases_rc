# ~/.bashrc.d/bash_aliases_rc
# /* vim: set filetype=rc : */

## From ublue bling
# ls aliases
if [[ "$(command -v eza)" ]]; then
    alias ll='eza -l --icons=auto --group-directories-first'
    alias l.='eza -d .*'
    alias ls='eza'
    alias l1='eza -1'
fi

