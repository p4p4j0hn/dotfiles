# bat for cat
[[ "$(command -v batcat)" ]] && alias cat='batcat --pager=none --style=plain'

# distrobox
[[ "$(command -v distrobox)" ]] && alias dbe="distrobox enter"

# SSH
alias insecssh='ssh -o "StrictHostKeyChecking=no" -o "UserKnownHostsFile=/dev/null"'
