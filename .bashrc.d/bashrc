# .bashrc.d/bashrc
# /* vim: set filetype=rc : */

if command -v bws 2>&1 >/dev/null; then
  source <(bws completions bash)
fi

if command -v tea 2>&1 >/dev/null; then
  PROG=tea source "$HOME/.config/tea/autocomplete.sh"
fi

# set bash completion to be more fuzzy.
bind 'set completion-ignore-case on'

if command -v direnv 2>&1 >/dev/null; then
  eval "$(direnv hook bash)"
fi


