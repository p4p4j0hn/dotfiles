# /* vim: set filetype=rc : */

if [ -f "$HOMEBREW_PREFIX/opt/nvm/nvm.sh" ]; then
  use_nvm() {
    type nvm >/dev/null 2>&1 || . "$HOMEBREW_PREFIX/opt/nvm/nvm.sh"
    nvm use $(< .nvmrc)
  }
fi

if [ -f "$HOMEBREW_PREFIX/bin/virtualenvwrapper.sh" ]; then
  use_venv () {
     export VIRTUAL_ENV="${HOME}/.local/share/virtualenvs/${1}"
     PATH_add "$VIRTUAL_ENV/bin"
  }
  use_vwrapper () {
    source $HOMEBREW_PREFIX/bin/virtualenvwrapper.sh
  }
fi
